---
import Layout from "@/layouts/Layout.astro";
import Section from "@/components/Section.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import { clubTimeline, clubStats } from "@/data/clubHistory";

// Transform our timeline data to match the existing template structure
const timelineEvents = [
  // Founding Era
  {
    date: "March 2020",
    title: "Plot Twist: Pandemic Sparks Programming Paradise",
    description: "Jenny Liu founded PROGgsu during the global pandemic, creating GSU's premier programming community from the ground up with the help of Facebook EIR Andrew Huang.",
    type: "founding",
    details: [
      "Founded by Jenny Liu during COVID-19 pandemic",
      "Andrew Huang (Facebook EIR) became founding academic advisor",
      "Established founding team with Shardul, Ikenna, Adithya, Beethoven, and Gyan",
      "Built community from a vision during unprecedented times"
    ],
    milestone: true
  },
  {
    date: "Spring 2020-2021",
    title: "Dream Team Assembly Complete",
    description: "The founding team came together with diverse skills and shared passion for programming education, laying the groundwork for what would become GSU's most impactful programming organization.",
    type: "founding",
    details: [
      "Jenny Liu established as Founding President",
      "Shardul joined as Founding VP and key community builder",
      "Ikenna took on Secretary/Librarian role with organizational expertise",
      "Adithya and Beethoven formed dynamic events leadership duo",
      "Gyan and Anish Ganga brought technical infrastructure knowledge"
    ],
    milestone: true
  },
  {
    date: "2021",
    title: "The Great Recognition Quest",
    description: "PROGgsu achieved official RSO status and SAFC funding recognition, transforming from a passionate startup to a legitimate campus organization with real resources and backing.",
    type: "growth",
    details: [
      "Achieved official RSO (Registered Student Organization) status",
      "Secured SAFC (Student Activity Fee Committee) funding",
      "Established formal organizational structure and governance",
      "Gained university recognition and support systems"
    ],
    milestone: true
  },
  {
    date: "2021-2023",
    title: "Beethoven's Revolution Era",
    description: "Beethoven becomes 2nd President, transforming PROGgsu from HackJams and DSA reviews to hackathons and mock interviews, expanding to 400+ Discord members.",
    type: "growth",
    details: [
      "Beethoven elected as 2nd President",
      "Pivoted from basic programming help to structured interview prep",
      "Launched comprehensive mock interview program",
      "Grew Discord community to 400+ active members",
      "Established hackathon participation and competitive programming focus"
    ],
    milestone: true
  },
  {
    date: "2022",
    title: "Prahbir Dynasty Begins",
    description: "Prahbir Virk takes over as 3rd President, beginning a 3-year leadership tenure focused on membership expansion and activity strengthening.",
    type: "milestone",
    details: [
      "Prahbir Virk becomes 3rd President",
      "Three-year presidential tenure begins",
      "Focus on sustainable growth and member retention",
      "Strengthened core programming activities"
    ],
    milestone: true
  },
  {
    date: "2023-2024",
    title: "Dynamic Duo: Two Presidents, One Brain Cell",
    description: "Unique collaborative leadership period with Prahbir Virk (3rd President) and Ethan Munji (4th President) serving together as co-presidents.",
    type: "milestone",
    details: [
      "First co-presidency in club history",
      "Prahbir Virk continued as 3rd President",
      "Ethan Munji served as 4th President simultaneously",
      "Demonstrated innovative shared governance model"
    ],
    milestone: true
  },
  {
    date: "Present",
    title: "Joey's Reign: The Fifth Element of Leadership",
    description: "Joey Zhang becomes the 5th President in 2025, leading PROGgsu into the future with continued innovation and community building.",
    type: "current",
    details: [
      "5th President in club's 5+ year history",
      "Building on legacy of 4 previous presidents",
      "Continued innovation and community building",
      "Leading PROGgsu into its next chapter"
    ],
    milestone: true
  }
];
---

<Layout
  title="History - PROGgsu"
  description="Discover the journey of PROGgsu from its founding to today. Explore our milestones, achievements, and the growth of GSU's programming community."
>
  <Section title="Our Journey" className="pt-16">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-12">
        <Breadcrumb title="Club History" />
        <p class="text-white/80 text-lg mt-6 max-w-3xl mx-auto leading-relaxed">
          From a visionary idea during the COVID-19 pandemic to a thriving community with proven programs, 
          discover how PROGgsu has evolved since March 2020 to become Georgia State University's premier programming organization.
        </p>
      </div>

      <!-- Stats Cards Section -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-10">
        <div class="text-center p-4 rounded-xl border border-white/10 bg-white/[0.02] backdrop-blur-xl glass-card">
          <div class="text-2xl font-bold text-white mb-1">{clubStats.yearsActive}</div>
          <div class="text-xs text-white/60">Years Strong</div>
        </div>
        <div class="text-center p-4 rounded-xl border border-white/10 bg-white/[0.02] backdrop-blur-xl glass-card">
          <div class="text-2xl font-bold text-white mb-1">100+</div>
          <div class="text-xs text-white/60">Students Helped</div>
        </div>
        <div class="text-center p-4 rounded-xl border border-white/10 bg-white/[0.02] backdrop-blur-xl glass-card">
          <div class="text-2xl font-bold text-white mb-1">{clubStats.programsLaunched.length}</div>
          <div class="text-xs text-white/60">Core Programs</div>
        </div>
        <div class="text-center p-4 rounded-xl border border-white/10 bg-white/[0.02] backdrop-blur-xl glass-card">
          <div class="text-2xl font-bold text-white mb-1">{clubStats.keyAchievements.length}</div>
          <div class="text-xs text-white/60">Major Milestones</div>
        </div>
      </div>

      <!-- Separator -->
      <div class="w-full h-px bg-gradient-to-r from-transparent via-white/20 to-transparent mb-10"></div>

      <!-- Key Achievements | Did You Know Section -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-12">
        <!-- Key Achievements -->
        <div class="rounded-xl border border-white/10 bg-white/[0.02] backdrop-blur-xl p-4 glass-card">
          <h3 class="text-xl font-bold text-white mb-4">Key Achievements</h3>
          <div class="space-y-3">
            <div class="flex items-start gap-3">
              <div class="w-2 h-2 rounded-full bg-purple-400 mt-2"></div>
              <div>
                <h4 class="text-white/90 font-medium text-sm">5+ Years Strong</h4>
                <p class="text-white/60 text-xs">Continuous operation since March 2020</p>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <div class="w-2 h-2 rounded-full bg-blue-400 mt-2"></div>
              <div>
                <h4 class="text-white/90 font-medium text-sm">100+ Students Helped</h4>
                <p class="text-white/60 text-xs">Through interview prep and programming guidance</p>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <div class="w-2 h-2 rounded-full bg-green-400 mt-2"></div>
              <div>
                <h4 class="text-white/90 font-medium text-sm">6 Core Programs</h4>
                <p class="text-white/60 text-xs">DSA prep, mock interviews, competitive programming</p>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <div class="w-2 h-2 rounded-full bg-amber-400 mt-2"></div>
              <div>
                <h4 class="text-white/90 font-medium text-sm">5 Presidents</h4>
                <p class="text-white/60 text-xs">Successful leadership transitions</p>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <div class="w-2 h-2 rounded-full bg-red-400 mt-2"></div>
              <div>
                <h4 class="text-white/90 font-medium text-sm">Official Recognition</h4>
                <p class="text-white/60 text-xs">RSO status and SAFC funding secured</p>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <div class="w-2 h-2 rounded-full bg-cyan-400 mt-2"></div>
              <div>
                <h4 class="text-white/90 font-medium text-sm">1100+ Discord Members</h4>
                <p class="text-white/60 text-xs">Active programming community built</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Did You Know? -->
        <div class="rounded-xl border border-white/10 bg-white/[0.02] backdrop-blur-xl p-4 glass-card">
          <h3 class="text-xl font-bold text-white mb-4">Did You Know?</h3>
          <div class="space-y-3">
            <div class="p-3 rounded-lg bg-white/[0.05] border border-white/10">
              <p class="text-white/80 text-xs">PROGgsu was founded during the COVID-19 pandemic, proving that great communities can emerge from challenging times!</p>
            </div>
            <div class="p-3 rounded-lg bg-white/[0.05] border border-white/10">
              <p class="text-white/80 text-xs">We had a unique co-presidency period where Prahbir and Ethan shared leadership duties - a first in club history!</p>
            </div>
            <div class="p-3 rounded-lg bg-white/[0.05] border border-white/10">
              <p class="text-white/80 text-xs">Our "Holy Trinity" programs (DSA, Mocks, Competitive Programming) have helped dozens of students land internships at top tech companies.</p>
            </div>
            <div class="p-3 rounded-lg bg-white/[0.05] border border-white/10">
              <p class="text-white/80 text-xs">Andrew Huang, a Facebook Engineer in Residence, was our founding academic advisor who helped establish our foundation.</p>
            </div>
            <div class="p-3 rounded-lg bg-white/[0.05] border border-white/10">
              <p class="text-white/80 text-xs">We transformed from basic HackJams to comprehensive interview prep, revolutionizing how GSU students approach technical interviews.</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Separator -->
      <div class="w-full h-px bg-gradient-to-r from-transparent via-white/20 to-transparent mb-16"></div>

      <!-- Timeline Section -->
      <div class="mb-12">
        <h2 class="text-2xl font-bold text-white text-center mb-8 glow-pulse-title">Our Timeline</h2>
        
        <!-- Vertical Timeline Container -->
        <div class="relative">
          <!-- Central Timeline Line -->
          <div class="absolute left-1/2 transform -translate-x-1/2 w-0.5 bg-gradient-to-b from-white/30 via-white/20 to-white/30 rounded-full" 
               style="height: calc(100% - 2rem); top: 1rem;"></div>
          
          <!-- Timeline Events -->
          {timelineEvents.map((event, index) => (
            <div class={`relative flex items-center ${index % 2 === 0 ? 'justify-start' : 'justify-end'} mb-12 timeline-entrance`}>
              <!-- Timeline Dot -->
              <div class={`absolute left-1/2 transform -translate-x-1/2 z-20 w-4 h-4 rounded-full border-2 border-black ${event.milestone ? 'bg-white shadow-lg shadow-white/30' : 'bg-white/60 shadow-lg shadow-white/20'} transition-all duration-300 hover:scale-125`}></div>
              
              <!-- Event Card -->
              <div class={`${index % 2 === 0 ? 'mr-auto pr-12' : 'ml-auto pl-12'} w-5/12 group`}>
                <div class="relative overflow-hidden rounded-2xl border border-white/10 bg-white/[0.02] backdrop-blur-xl shadow-lg hover:shadow-2xl transition-all duration-500 hover:scale-[1.02] hover:border-white/20 timeline-card glass-card">
                  <!-- Glass effect overlay -->
                  <div class="absolute inset-0 bg-gradient-to-br from-white/[0.05] via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                  
                  <!-- Card Header -->
                  <div class="relative px-4 py-3 bg-gradient-to-r from-white/[0.08] to-white/[0.04] backdrop-blur-sm border-b border-white/10">
                    <div class="flex items-center justify-between">
                      <span class="text-sm font-bold text-white/90 uppercase tracking-wide">
                        {event.date}
                      </span>
                      <div class="w-2 h-2 rounded-full bg-white/40"></div>
                    </div>
                  </div>

                  <!-- Card Content -->
                  <div class="relative p-4 z-10">
                    <h3 class="text-xl font-bold text-white mb-3 group-hover:text-white/90 transition-colors duration-300">
                      {event.title}
                      {event.milestone && (
                        <span class="ml-2 inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-white/10 border border-white/20 text-white/80">
                          Milestone
                        </span>
                      )}
                    </h3>
                    
                    <p class="text-white/70 text-sm mb-4 leading-relaxed">
                      {event.description}
                    </p>

                    <!-- Event Details -->
                    <div class="space-y-2">
                      <h4 class="text-xs text-white/60 uppercase tracking-wide font-medium">Highlights</h4>
                      <ul class="space-y-1">
                        {event.details.map((detail) => (
                          <li class="flex items-start gap-2 text-xs text-white/60">
                            <span class="text-white/40 mt-0.5">â€¢</span>
                            <span>{detail}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  </div>

                  <!-- Connection Line to Timeline -->
                  <div class={`absolute top-6 ${index % 2 === 0 ? 'right-0 translate-x-full' : 'left-0 -translate-x-full'} w-12 h-px bg-gradient-to-r ${index % 2 === 0 ? 'from-white/20 to-transparent' : 'from-transparent to-white/20'}`}></div>
                  
                  <!-- Subtle tint effect -->
                  <div class="absolute inset-0 bg-gradient-to-br from-blue-500/[0.02] via-transparent to-purple-500/[0.02] opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-2xl"></div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Separator -->
      <div class="w-full h-px bg-gradient-to-r from-transparent via-white/20 to-transparent mb-10"></div>

      <!-- Future Vision -->
      <div class="text-center py-8 px-6 rounded-2xl border border-white/10 bg-white/[0.02] backdrop-blur-xl glass-card">
        <h3 class="text-2xl font-bold text-white mb-3 glow-pulse-title">
          The Future is Bright
        </h3>
        <p class="text-white/70 text-base mb-5 max-w-3xl mx-auto leading-relaxed">
          As we continue to grow, our mission remains the same: fostering an inclusive environment where every student 
          can learn, create, and thrive in the world of programming. Join us as we write the next chapter of our story!
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/members" 
            class="px-8 py-3 rounded-lg bg-white/10 hover:bg-white/20 text-white font-medium transition-all duration-300 hover:scale-105 backdrop-blur-sm border border-white/20 hover:border-white/30"
          >
            Meet Our Team
          </a>
          <a 
            href="/events" 
            class="px-8 py-3 rounded-lg border border-white/20 text-white hover:bg-white/5 font-medium transition-all duration-300 hover:scale-105 backdrop-blur-sm"
          >
            Upcoming Events
          </a>
        </div>
      </div>
    </div>
  </Section>
</Layout>

<style>
  .glow-pulse-title {
    animation: titlePulse 2.5s infinite;
  }
  
  /* Clean minimal styles for vertical timeline */
  .timeline-entrance {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease forwards;
  }
  
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes titlePulse {
    0%, 100% {
      text-shadow:
        0 0 6px rgba(59, 130, 246, 0.18),
        0 0 12px rgba(255, 255, 255, 0.10),
        0 0 24px rgba(59, 130, 246, 0.08);
      color: #fff;
    }
    50% {
      text-shadow:
        0 0 12px rgba(59, 130, 246, 0.22),
        0 0 24px rgba(255, 255, 255, 0.13),
        0 0 36px rgba(59, 130, 246, 0.10);
      color: #f4faff;
    }
  }
  
  /* Stagger the animation for each timeline item */
  .timeline-entrance:nth-child(1) { animation-delay: 0.1s; }
  .timeline-entrance:nth-child(2) { animation-delay: 0.2s; }
  .timeline-entrance:nth-child(3) { animation-delay: 0.3s; }
  .timeline-entrance:nth-child(4) { animation-delay: 0.4s; }
  .timeline-entrance:nth-child(5) { animation-delay: 0.5s; }
  .timeline-entrance:nth-child(6) { animation-delay: 0.6s; }
  .timeline-entrance:nth-child(7) { animation-delay: 0.7s; }
  
  /* Subtle glass effect enhancement */
  .glass-card {
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }
  
  /* Hover glow effect */
  .timeline-card:hover {
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3), 
                0 0 0 1px rgba(255, 255, 255, 0.1),
                0 0 20px rgba(255, 255, 255, 0.05);
  }
</style> 